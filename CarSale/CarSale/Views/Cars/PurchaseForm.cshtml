@using CarSale.Models
@model CarSale.Models.PaymentDTO
@{
    ViewData["Title"] = "PurchaseForm";
}

<h1>Purchase Form</h1>
<div class="row">
    <form asp-action="Register" method="post" class="form-horizontal">
        <div class="form-group">
            <label asp-for="City"></label>
            <div class="col-md-12">
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="CityStreet"></label>
            <div class="col-md-12">
                <input asp-for="CityStreet" class="form-control" />
                <span asp-validation-for="CityStreet" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="StreetNumber"></label>
            <div class="col-md-12">
                <input asp-for="StreetNumber" class="form-control" />
                <span asp-validation-for="StreetNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="WayOfPurchase"></label>
            <div class="col-md-12">
                <input asp-for="WayOfPurchase" class="form-control" />
                <span asp-validation-for="WayOfPurchase" class="text-danger"></span>
            </div>
        </div>
        <p>After getting this information we will call you</p>
        <p><a class="btn btn-success" href="https://localhost:44381/Cars/PurchaseForm">Buy</a></p>
    </form>
</div>

